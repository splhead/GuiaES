<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <style name="Theme.MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontStyle" />

    <style name="FontStyle.Small">
        <item name="font_small">10sp</item>
        <item name="font_medium">16sp</item>
        <item name="font_large">24sp</item>
        <item name="font_xlarge">26sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">12sp</item>
        <item name="font_medium">18sp</item>
        <item name="font_large">26sp</item>
        <item name="font_xlarge">28sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">14sp</item>
        <item name="font_medium">20sp</item>
        <item name="font_large">28sp</item>
        <item name="font_xlarge">30sp</item>
    </style>

</resources>
